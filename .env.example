# CIRISLens Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://cirislens:cirislens@localhost:5432/cirislens

# OAuth Configuration (for admin interface)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_CALLBACK_URL=http://localhost:8080/cirislens/api/admin/auth/callback
ALLOWED_DOMAIN=ciris.ai
SESSION_SECRET=change-this-to-random-secret

# Agent Service Tokens
# Format: AGENT_<NAME>_TOKEN and AGENT_<NAME>_URL
# These tokens are used to authenticate with agent telemetry endpoints
# Replace with your actual service tokens!
AGENT_DATUM_TOKEN=service:your-datum-token-here
AGENT_DATUM_URL=https://agents.ciris.ai/api/datum

# You can add more agents as needed:
# AGENT_SAGE_TOKEN=service:your-sage-token-here
# AGENT_SAGE_URL=https://agents.ciris.ai/api/sage-2wnuc8
# AGENT_NEXUS_TOKEN=service:your-nexus-token-here
# AGENT_NEXUS_URL=https://agents.ciris.ai/api/nexus

# Manager Configuration
MANAGER_API_URL=https://agents.ciris.ai/manager/v1

# Telemetry Collection
COLLECTION_INTERVAL_SECONDS=30
OTLP_COLLECTION_ENABLED=true

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme

# MinIO Configuration (for long-term storage)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme123

# Environment
ENV=development