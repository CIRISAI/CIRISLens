        {
          "format": "table",
          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "WITH latest_metrics AS (\n  SELECT \n    agent_name,\n    metric_name,\n    value,\n    labels,\n    ROW_NUMBER() OVER (PARTITION BY agent_name, metric_name, labels ORDER BY timestamp DESC) as rn\n  FROM agent_metrics\n  WHERE timestamp BETWEEN $__timeFrom() AND $__timeTo()\n)\nSELECT \n  agent_name AS \"Agent\",\n  COUNT(DISTINCT CASE WHEN metric_name LIKE 'service.%' THEN labels->>'service' END) AS \"Services\",\n  MAX(CASE WHEN metric_name = 'requests.total' THEN value END)::INT AS \"Total Requests\",\n  MAX(CASE WHEN metric_name = 'errors.total' THEN value END)::INT AS \"Total Errors\",\n  MAX(CASE WHEN metric_name = 'system.error_rate' THEN value END)::NUMERIC(5,4) AS \"Error Rate\",\n  MAX(CASE WHEN metric_name = 'system.uptime' THEN value END)::INT AS \"Uptime (s)\",\n  MAX(CASE WHEN metric_name = 'system.healthy' THEN value END)::INT AS \"Healthy\"\nFROM latest_metrics\nWHERE rn = 1\nGROUP BY agent_name\nORDER BY agent_name",
          "refId": "A",
          "select": [],
          "table": "agent_metrics",
          "timeColumn": "timestamp",
          "timeColumnType": "timestamp",
          "where": []
        }
